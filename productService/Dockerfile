FROM golang:1.20.2-alpine3.17 AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o productService

FROM alpine:3.17.3 AS runner

WORKDIR /app

COPY --from=builder /app/productService .

ENV PRODUCT_SERVICE_POSTGRES_USER ${PRODUCT_SERVICE_POSTGRES_USER}
ENV PRODUCT_SERVICE_POSTGRES_PASSWORD ${PRODUCT_SERVICE_POSTGRES_PASSWORD}
ENV PRODUCT_SERVICE_POSTGRES_DB ${PRODUCT_SERVICE_POSTGRES_DB}
ENV PRODUCT_SERVICE_POSTGRES_HOST ${PRODUCT_SERVICE_POSTGRES_HOST}
ENV PRODUCT_SERVICE_POSTGRES_PORT ${PRODUCT_SERVICE_POSTGRES_PORT}
ENV PRODUCT_SERVICE_PORT ${PRODUCT_SERVICE_PORT}
ENV PRODUCT_SERVICE_POSTGRES_SSLMODE ${PRODUCT_SERVICE_POSTGRES_SSLMODE}

CMD ["./productService"]